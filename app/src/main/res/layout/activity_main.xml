<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/blood_donation"
        android:scaleType="fitCenter"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:layout_gravity="top"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/search_blood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:layout_below="@+id/title"
            android:layout_marginEnd="25dp"
            android:background="@drawable/custom_button_back"
            android:drawableRight="@drawable/ic_search_blood"
            android:text="Search for Blood"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/or_spacing"
            android:layout_below="@+id/search_blood"
            android:gravity="center"
            android:padding="10dp"
            android:text="or"
            android:textColor="@color/gray_color"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/login_at_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/or_spacing"
            android:gravity="center"
            android:padding="5dp"
            android:text="Login User"
            android:textColor="@color/gray_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/register_at_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_at_home"
            android:gravity="center"
            android:padding="5dp"
            android:text="Don't have Account? Create One !"
            android:textColor="@color/gray_color"
            android:textSize="15sp" />


    </RelativeLayout>

</FrameLayout>
